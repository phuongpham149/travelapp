<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:color">@color/color_text</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">@dimen/margin_small</item>
        <item name="android:layout_marginEnd">@dimen/margin_small</item>
        <item name="android:layout_height">@dimen/height_medium</item>
        <item name="android:paddingLeft">@dimen/padding_left_edt</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:drawablePadding">@dimen/drawable_padding_edt</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:background">@drawable/edt_background</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ButtonStyle.Form">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_medium</item>
    </style>

    <style name="ButtonStyle.Form.Facebook">
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:background">@drawable/btn_facebook</item>
        <item name="android:text">@string/all_continue_with_fb</item>
    </style>

    <style name="ButtonStyle.Form.Submit">
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginStart">@dimen/margin_small</item>
        <item name="android:layout_marginEnd">@dimen/margin_small</item>
        <item name="android:background">@drawable/btn_submit</item>
        <item name="android:layout_marginBottom">@dimen/margin_bottom_btn_submit</item>
    </style>

    <style name="ViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@drawable/line_background</item>
        <item name="android:alpha">0.2</item>
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
    </style>

    <style name="TextViewStyle.Splash">
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
    </style>

    <style name="ButtonStyle.Splash">
        <item name="android:layout_width">@dimen/width_splash_button</item>
        <item name="android:layout_height">@dimen/height_splash_button</item>
        <item name="android:layout_marginBottom">@dimen/margin_bottom_splash_button</item>
        <item name="android:background">@drawable/btn_splash</item>
        <item name="android:alpha">@dimen/alpha_splash_button</item>
    </style>
</resources>
